<% content_for :header do %>
  <div class="Heading">
    <h1><%= Event.model_name.human(count: 2) %></h1>
  </div>

  <nav aria-label="<%= Event.model_name.human(count: 2) %>">
    <ul class="Tabs">
      <li>
        <%= link_to "Upcoming <span>(#{@all_upcoming_events_count})</span>".html_safe, dashboard_events_path, "aria-current": @active_events == :upcoming %>
      </li>
      <li>
        <%= link_to "Past <span>(#{@all_past_events_count})</span>".html_safe, dashboard_past_events_path, "aria-current": @active_events == :past %>
      </li>
    </ul>
  </nav>
<% end %>

<%= render layout: "shared/dashboard", locals: { active_dashboard_menu: @active_dashboard_menu } do %>
  <%= render "shared/events",
    events: @events,
    after_create_redirect: @after_create_redirect,
    after_destroy_redirect: @after_destroy_redirect,
    empty_state_message: @empty_state_message
  %>
<% end %>
