<%= render layout: "shared/dashboard" do %>
  <div class="Heading">
    <h1><%= Bookmark.model_name.human(count: 2) %></h1>
    <%= render "shared/category_filter", categories: @categories %>
  </div>

  <%= render "shared/products",
    items: @bookmarks,
    empty_state: t('empty_state.bookmarks'),
    include_delete_button: true,
    hide_since: true,
    hide_period: true
  %>
<% end %>
