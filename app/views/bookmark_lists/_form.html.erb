<% content_for :css do %>
  <%= stylesheet_link_tag "entity_form", crossorigin: true, integrity: true %>
<% end %>

<div class="Form">
  <div class="Heading">
    <h1><%= yield :heading %></h1>
    <button class="Heading-infoButton" data-dialog="content-explanation" type="button">
      <span>About bookmark lists</span>
    </button>
  </div>

  <% if bookmark_list.errors.any? %>
    <%= render "shared/flash_messages", messages: bookmark_list.errors.map { |error| ["alert", error.full_message] } %>
  <% end %>

  <div class="Form-field">
    <%= f.label :name, class: 'h4 Form-label' %>
    <%= f.text_field :name, placeholder: t('bookmark_list.name_placeholder'), required: true %>
  </div>
  <div class="Form-submit">
    <button type="submit" class="Button">
      <%= t('bookmark_list.new.submit') %>
    </button>
  </div>
</div>
