<% content_for :css do %>
  <%= stylesheet_link_tag "form" %>
  <%= stylesheet_link_tag "new_product" %>
<% end %>

<div class="Form Form--centered">
  <div class="Heading">
    <h1>Edit <span><%= @brand.name %></span></h1>
  </div>

  <% if @brand.errors.any? %>
    <%= render "shared/flash_messages", messages: @brand.errors.map { |error| ["alert", error.full_message] } %>
  <% end %>

  <%= form_for @brand, html: { class: "Form NewProduct", method: :put } do |f| %>
    <div class="Form-field">
      <%= f.label :name, class: "Form-label" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div class="Form-field">
      <%= f.label :full_name, class: "Form-label" do %>
        Full name <small><i>(optional)</i></small>
      <% end %>
      <%= f.text_field :full_name %>
    </div>

    <div class="Form-field">
      <%= f.label :website, class: "Form-label" do %>
        Website <small><i>(optional)</i></small>
      <% end %>
      <%= f.url_field :website %>
    </div>

    <div class="Form-field">
      <%= f.label :country_code, class: "Form-label" do %>
        Country <small><i>(optional)</i></small>
      <% end %>
      <%= f.country_select :country_code, include_blank: true %>
    </div>

    <div class="Form-field">
      <span class="Form-label"><%= t('symbols.discontinued') %></span>
      <div class="Form-options">
        <%= f.radio_button :discontinued, 0, checked: @brand.discontinued.nil? || @brand.discontinued == false %>
        <%= f.label :discontinued, "No", value: 0 %>
        <%= f.radio_button :discontinued, 1, checked: @brand.discontinued == true %>
        <%= f.label :discontinued, "Yes", value: 1  %>
      </div>
      <p class="Form-hint">
        <small><b>Note:</b> If a a brand is set to <i>Discontinued</i>, all its products are also set to <i>Discontinued</i>.</small>
      </p>
    </div>

    <div class="Form-submit">
      <%= f.button t('new_brand.submit'), type: "submit", class: "Button" %>
    </div>
  <% end %>
</div>
