<div class="Heading">
  <h1>
    <%= t('headings.brands') %>
    <% if @sub_category %>
      <small><%= @sub_category.name %></small>
    <% elsif @category %>
      <small><%= @category.name %></small>
    <% end %>
  </h1>
  <%= link_to t('new_brand.link'), user_signed_in? ? new_brand_path(sub_category: params[:sub_category]) : new_user_session_path(redirect: new_brand_path(sub_category: params[:sub_category])), class: "Button" %>
</div>

<%= render "shared/filter", reset_path: brands_path, collection: @brands, render_abc: true, render_status: true do %>
  <div class="u-flex u-alignCenter u-gap-md">
    <label for="sort">Sort</label>
    <select name="sort" id="sort">
      <option value="name_asc"<%= " selected" if params[:sort] == "name_asc" %>>Name: A first</option>
      <option value="name_desc"<%= " selected" if params[:sort] == "name_desc" %>>Name: Z first</option>
      <option value="products_desc"<%= " selected" if params[:sort] == "products_desc" %>><%= t('headings.products') %>: Most first</option>
      <option value="products_asc"<%= " selected" if params[:sort] == "products_asc" %>><%= t('headings.products') %>: Least first</option>
      <option value="country_asc"<%= " selected" if params[:sort] == "country_asc" %>><%= t('brand.country_code') %>: A first</option>
      <option value="country_desc"<%= " selected" if params[:sort] == "country_desc" %>><%= t('brand.country_code') %>: Z first</option>
      <option value="added_desc"<%= " selected" if params[:sort] == "added_desc" %>>Added: Newest first</option>
      <option value="added_asc"<%= " selected" if params[:sort] == "added_asc" %>>Added: Oldest first</option>
      <option value="updated_desc"<%= " selected" if params[:sort] == "updated_desc" %>>Updated: Newest first</option>
      <option value="updated_asc"<%= " selected" if params[:sort] == "updated_asc" %>>Updated: Oldest first</option>
    </select>
  </div>
<% end %>

<% if @brands.any? %>
  <%= render "shared/brands_table", brands: @brands %>
  <%= paginate @brands, params: { anchor: "list" } %>
<% else %>
  <%= render "shared/empty_state", message: t('empty_state.brands_filter', path: new_brand_path) %>
<% end %>

<%= render "shared/page_actions" %>
