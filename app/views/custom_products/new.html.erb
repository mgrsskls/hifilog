<%= render layout: "shared/dashboard", locals: { active_dashboard_menu: @active_dashboard_menu } do %>
  <%= form_for @custom_product, html: { class: "EntityForm", method: :post } do |f| %>
    <% content_for :heading do %>
      <%= t('custom_product.new.heading') %>
    <% end %>

    <%= render "form", f: f, custom_product: @custom_product, categories: @categories %>
  <% end %>
<% end %>
