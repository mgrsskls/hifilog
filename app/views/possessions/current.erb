<%= render layout: "shared/dashboard" do %>
  <div class="Heading">
    <h1><%= t('headings.collection') %></h1>
    <%= render "shared/category_filter", categories: @categories %>
  </div>

  <%= render "shared/products",
    user: current_user,
    items: @possessions,
    empty_state: t('empty_state.user_products', brands_path: brands_path, products_path: products_path),
    include_images: true,
    include_image_upload: true,
    include_setup: true,
    hide_period: true,
    hide_release_date: true,
    delete_button_label: t('product.remove.label'),
    delete_confirm_msg: 'product.remove.confirm',
    delete_dialog: true
  %>
<% end %>
