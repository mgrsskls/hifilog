<%= render layout: "shared/dashboard" do %>
  <div class="Heading">
    <h1><%= t('headings.prev_owneds') %></h1>
    <%= render "shared/category_filter", categories: @categories %>
  </div>

  <%= render "shared/products",
    items: @possessions,
    empty_state: t('empty_state.prev_owneds'),
    brands_path: brands_path,
    products_path: products_path,
    include_images: true,
    include_image_upload: true,
    include_delete_button: true,
    hide_release_date: true,
    hide_since: true,
    delete_button_label: t('product.remove_from_prev_owneds.label'),
    delete_confirm_msg: 'product.remove_from_prev_owneds.confirm'
  %>
<% end %>
