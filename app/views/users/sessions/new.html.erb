<div class="Form Form--centered">
  <div class="Heading">
    <h1><%= t('user_form.login') %></h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if params[:redirect] %>
      <input type="hidden" name="redirect" value="<%= params[:redirect] %>">
    <% end %>
    <%= render "shared/flash_messages", messages: resource.errors.full_messages.map { |message| [ :alert, message ] } if resource.errors.full_messages.any? %>

    <div class="Form-field">
      <%= f.label :email, class: "Form-label" %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="Form-field">
      <%= f.label :password, class: "Form-label" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="Form-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="Form-submit">
      <button type="submit" class="Button"><%= t('user_form.login') %></button>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
