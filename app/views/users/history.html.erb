<%= render layout: "users/shared/layout", locals: { user: @user, heading: @heading, categories: @categories, sub_category: @sub_category } do %>
  <% if @possessions.any? %>
    <%= render "shared/history",
      possessions: @possessions
    %>
  <% else %>
    <%= render "shared/empty_state", message: t('empty_state.public_profile', name: h(@user.user_name)) %>
  <% end %>
<% end %>
