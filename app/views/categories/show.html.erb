<div class="Heading">
  <h1><%= @category.name %></h1>
  <div class="Heading-amount">
    <%= t('amount_categories', count: @sub_categories.size) %>
  </div>
</div>

<nav class="Pagination" aria-label="<%= t('filter.category.label') %>">
  <ol class="Pagination-list">
    <li>
      <a class="Pagination-all" href="<%= categories_path %>"<%= ' aria-current="true"'.html_safe unless params[:id].present? %>><%= t('filter.all') %></a>
    </li>
    <% @categories.each do |category| %>
      <li>
        <a href="<%= category_path(id: category.friendly_id) %>"<%= ' aria-current="true"'.html_safe if params[:id] == category.friendly_id %>><%= category[:name] %></a>
      </li>
    <% end %>
  </ol>
</nav>

<% if @sub_categories.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('headings.products') %></th>
      </tr>
    </thead>
    <tbody>
      <% @sub_categories.each do |sub_category| %>
        <tr>
          <tr>
            <th scope="row"><%= link_to sub_category.name, category_sub_category_path(id: sub_category.friendly_id, category_id: @category.friendly_id) %></th>
            <td><%= sub_category.products.any? ? sub_category.products.size : "-" %></td>
          </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= render "shared/empty_state", message: t('empty_state.categories') %>
<% end %>

<%= render "shared/page_actions" %>
