<% content_for :css do %>
  <%= stylesheet_link_tag "dashboard" %>
<% end %>
<div class="Dashboard">
  <nav class="Dashboard-menu">
    <ul class="Dashboard-links">
      <li>
        <a class="Dashboard-link" href="<%= dashboard_root_path %>"<%= active_dashboard_menu_state(@active_dashboard_menu, :dashboard) %>>
          Dashboard
        </a>
      </li>
      <li>
        <a class="Dashboard-link" href="<%= dashboard_products_path %>"<%= active_dashboard_menu_state(@active_dashboard_menu, :products) %>>
          <%= t('headings.products') %>
        </a>
        <small><%= current_user_products_count %></small>
      </li>
      <li>
        <a class="Dashboard-link" href="<%= dashboard_bookmarks_path %>"<%= active_dashboard_menu_state(@active_dashboard_menu, :bookmarks) %>>
          <%= t('headings.bookmarks') %>
        </a>
        <small><%= current_user_bookmarks_count %></small>
      </li>
      <li>
        <a class="Dashboard-link" href="<%= dashboard_setups_path %>"<%= active_dashboard_menu_state(@active_dashboard_menu, :setups) %>>
          <%= t('headings.setups') %>
        </a>
        <small><%= current_user_setups_count %></small>
      </li>
      <li class="Dashboard-separator">
        <a class="Dashboard-link" href="<%= edit_user_registration_path %>"<%= active_dashboard_menu_state(@active_dashboard_menu, :account) %>><%= t('account') %></a>
      </li>
      <li>
        <%= button_to t('user_form.logout'), destroy_user_session_path, method: :delete, class: "Dashboard-link"  %>
      </li>
    </ul>
  </nav>

  <div class="Dashboard-products">
    <%= yield %>
  </div>
</div>
