<% categories ||= [] %>
<% empty_state ||= "" %>

<% if categories.any? %>
  <nav class="Pagination" aria-label="<%= t('filter.category.label') %>">
    <ol class="Pagination-list">
      <li>
        <a class="Pagination-all" href="<%= @is_public_profile ? users_path(user_name: @user.user_name) : user_products_path %>"<%= ' aria-current="true"'.html_safe unless params[:category].present? %>><%= t('filter.all') %></a>
      </li>
      <% categories.each do |category| %>
        <li>
          <a href="<%= @is_public_profile ? users_products_category_path(user_name: @user.user_name, category: category.friendly_id) : user_products_category_path(category: category.friendly_id) %>"<%= ' aria-current="true"'.html_safe if params[:category] == category.friendly_id %>><%= category.name %></a>
        </li>
      <% end %>
    </ol>
  </nav>
<% end %>

<% if products.any? %>
  <% content_for :js do %>
    <%= javascript_include_tag "table_saw", type: "module" %>
  <% end %>
  <table-saw>
    <table>
      <thead>
        <th><%= t('name') %></th>
        <th><%= t('headings.brand').html_safe %></th>
        <th><%= t('headings.category').html_safe %></th>
      </thead>
      <tbody>
        <% products.each do |product| %>
          <tr>
            <th scope="row"><%= link_to product.name, brand_product_path(id: product.friendly_id, brand_id: product.brand.friendly_id) %></th>
            <td><%= product.brand.name %></td>
            <td>
              <% if product.sub_categories.any? %>
                <%= product.sub_categories.map{ |sub_category| sub_category.name }.join(", ") %>
              <% else %>
                <%= product.categories.map{ |category| category.name }.join(", ") %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </table-saw>
<% else %>
  <%= render "shared/empty_state", message: empty_state %>
<% end %>
